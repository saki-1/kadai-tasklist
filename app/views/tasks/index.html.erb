<% if logged_in? %>
  ログイン完了：<%= current_user.name %>
  <h1>タスク一覧</h1>

    <ul>
      <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %>:<%= task.content %> &gt; <%= task.status %></li>
      <% end %>
    </ul>
    
    <%= link_to 'タスクの作成', new_task_path %>

    <%= link_to 'ログアウト', logout_path, method: :delete %>  

<% else %>
  <%= link_to 'sign up now', signup_path %>
  <%= link_to 'login', login_path %>
<% end %>